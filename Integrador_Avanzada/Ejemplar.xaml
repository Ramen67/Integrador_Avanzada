<Window x:Class="Integrador_Avanzada.Ejemplar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrador_Avanzada"
        mc:Ignorable="d"
        Title="Ejemplar" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,8,0,0" VerticalAlignment="Top" Width="75" Source="/Imagenes/libreria.png"/>
        <Button x:Name="PrestamoBtn" Content="Prestamo" HorizontalAlignment="Left" Margin="560,20,0,0" VerticalAlignment="Top"  Height="46" Width="105" FontSize="20" Click="PrestamoBtn_Click" Background="#FFF8AF23"/>
        <Button x:Name="HomeBtn" Content="Home" HorizontalAlignment="Left" Margin="680,20,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Click="HomeBtn_Click" Background="#FFF8AF23"/>
        <Button x:Name="SancionesBtn" Content="Sanciones" HorizontalAlignment="Left" Margin="440,20,0,0" VerticalAlignment="Top" Width="105" Height ="45" FontSize="20" Click="SancionesBtn_Click" Background="#FFF8AF23" />
        <Button x:Name="UsuarioBtn" Content="Usuario" HorizontalAlignment="Left" Margin="320,20,0,0" VerticalAlignment="Top" Width="105" Height="46" FontSize="20" Background="#FFF8AF23" Click="UsuarioBtn_Click"/>
        <Button x:Name="LibroBtn" Content="Libro" HorizontalAlignment="Left" Margin="200,20,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Background="#FFF8AF23" Click="LibroBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,88,0,0" TextWrapping="Wrap" Text="Agregar un ejemplar" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,114,0,0" TextWrapping="Wrap" Text="ID del libro" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtLibro" HorizontalAlignment="Left" Margin="10,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="169,114,0,0" TextWrapping="Wrap" Text="Numero de inventario" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtInven" HorizontalAlignment="Left" Margin="169,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="agregarBtn" Content="Agregar el ejemplar" HorizontalAlignment="Left" Margin="76,164,0,0" VerticalAlignment="Top" FontSize="18" Click="agregarBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="186,0,0,0" TextWrapping="Wrap" Text="Ejemplares" VerticalAlignment="Center" FontSize="18"/>
        <DataGrid x:Name="dgEjemplar" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="52,266,395,39"/>
        <Button x:Name="mostrarBtn" Content="Mostrar" HorizontalAlignment="Left" Margin="196,233,0,0" VerticalAlignment="Top" FontSize="18" Click="mostrarBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="528,95,0,0" TextWrapping="Wrap" Text="Mostrar los ejemplares disponibles" VerticalAlignment="Top" Height="47" Width="219" TextAlignment="Center" FontSize="18"/>
        <Button x:Name="dispoBtn" Content="Mostrar" HorizontalAlignment="Left" Margin="604,156,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="-0.151,0.467" Click="dispoBtn_Click"/>
        <DataGrid x:Name="dgDisponibles" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="510,205,35,73"/>

    </Grid>
</Window>
