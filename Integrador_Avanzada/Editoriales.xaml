<Window x:Class="Integrador_Avanzada.Editoriales"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrador_Avanzada"
        mc:Ignorable="d"
        Title="Libro" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,8,0,0" VerticalAlignment="Top" Width="75" Source="/Imagenes/libreria.png"/>
        <Button x:Name="PrestamoBtn" Content="Prestamo" HorizontalAlignment="Left" Margin="602,20,0,0" VerticalAlignment="Top"  Height="46" Width="105" FontSize="20" Click="PrestamoBtn_Click" Background="#FFF8AF23"/>
        <Button x:Name="UsuarioBtn" Content="Usuario" HorizontalAlignment="Left" Margin="715,20,0,0" VerticalAlignment="Top" Width="70" Height="45" FontSize="20" Background="#FFF8AF23" Click="UsuarioBtn_Click"/>
        <Button x:Name="SancionesBtn" Content="Sanciones" HorizontalAlignment="Left" Margin="482,20,0,0" VerticalAlignment="Top" Width="105" Height ="45" FontSize="20" Click="SancionesBtn_Click" Background="#FFF8AF23" />
        <Button x:Name="EjemplarBtn" Content="Ejemplar" HorizontalAlignment="Left" Margin="362,20,0,0" VerticalAlignment="Top" Width="105" Height="46" FontSize="20" Background="#FFF8AF23" Click="EjemplarBtn_Click"/>
        <Button x:Name="LibroBtn" Content="Libro" HorizontalAlignment="Left" Margin="272,20,0,0" VerticalAlignment="Top" Width="75" Height="45" FontSize="20" Background="#FFF8AF23" Click="LibroBtn_Click"/>
        <Button x:Name="AutorBtn" Content="Autor" HorizontalAlignment="Left" Margin="189,20,0,0" VerticalAlignment="Top" Width="72" Height="45" FontSize="20" Background="#FFF8AF23" Click="AutorBtn_Click" />
        <DataGrid x:Name="dgEdit" HorizontalAlignment="Left" Height="171" Margin="467,141,0,0" VerticalAlignment="Top" Width="240" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="80,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="16"><Run Language="es-mx" Text="Ciudad"/></TextBlock>
        <TextBox x:Name="txtCiudad" HorizontalAlignment="Left" Margin="80,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="agregarBtn" Content="Agregar Editorial" HorizontalAlignment="Left" Margin="60,311,0,0" VerticalAlignment="Top" FontSize="18" Click="agregarBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="80,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="135" FontSize="16"><Run Language="es-mx" Text="Pais"/></TextBlock>
        <TextBox x:Name="txtPais" HorizontalAlignment="Left" Margin="80,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="80,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="16"><Run Language="es-mx" Text="Nombre"/></TextBlock>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="80,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Button x:Name="DelBtn" Content="Borrar Editorial" HorizontalAlignment="Left" Margin="246,227,0,0" VerticalAlignment="Top" FontSize="18" Click="deleteBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="246,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="16"><Run Language="es-mx" Text="Id"/></TextBlock>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="246,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Button x:Name="VerBtn" Content="Ver Editorial" HorizontalAlignment="Left" Margin="362,355,0,0" VerticalAlignment="Top" FontSize="18" Click="VerBtn_Click"/>
    </Grid>
</Window>