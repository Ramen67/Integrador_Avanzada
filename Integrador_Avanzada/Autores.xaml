<Window x:Class="Integrador_Avanzada.Autores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrador_Avanzada"
        mc:Ignorable="d"
        Title="Autores" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,8,0,0" VerticalAlignment="Top" Width="75" Source="/Imagenes/libreria.png"/>
        <Button x:Name="PrestamoBtn" Content="Prestamo" HorizontalAlignment="Left" Margin="560,20,0,0" VerticalAlignment="Top"  Height="46" Width="105" FontSize="20" Click="PrestamoBtn_Click" Background="#FFF8AF23"/>
        <Button x:Name="HomeBtn" Content="Home" HorizontalAlignment="Left" Margin="680,20,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Click="HomeBtn_Click" Background="#FFF8AF23"/>
        <Button x:Name="SancionesBtn" Content="Sanciones" HorizontalAlignment="Left" Margin="440,20,0,0" VerticalAlignment="Top" Width="105" Height ="45" FontSize="20" Click="SancionesBtn_Click" Background="#FFF8AF23" />
        <Button x:Name="UsuarioBtn" Content="Usuario" HorizontalAlignment="Left" Margin="320,20,0,0" VerticalAlignment="Top" Width="105" Height="46" FontSize="20" Background="#FFF8AF23" Click="UsuarioBtn_Click"/>
        <Button x:Name="LibroBtn" Content="Libro" HorizontalAlignment="Left" Margin="200,20,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Background="#FFF8AF23" Click="LibroBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="120,104,0,0" TextWrapping="Wrap" Text="Autores:" VerticalAlignment="Top" FontSize="20"/>
        <DataGrid x:Name="dgAutor" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="48,136,530,40" SelectionChanged="dgAutor_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="336,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Text="Libros:"/>
        <DataGrid x:Name="dgLibro" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="292,136,348,40" SelectionChanged="dgLibro_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Height="52" Margin="530,117,0,0" TextWrapping="Wrap" Text="Selecciona un autor y un libro (abajo se mostraran sus ID's)" VerticalAlignment="Top" Width="215" FontSize="16" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="530,174,0,0" TextWrapping="Wrap" Text="ID autor:" VerticalAlignment="Top" Width="135" FontSize="16"/>
        <TextBox x:Name="txtAutor" HorizontalAlignment="Left" Margin="530,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="530,223,0,0" TextWrapping="Wrap" Text="ID libro:" VerticalAlignment="Top" Width="135" FontSize="16"/>
        <TextBox x:Name="txtLibro" HorizontalAlignment="Left" Margin="530,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="agregarBtn" Content="Agregar autor al libro" HorizontalAlignment="Left" Margin="550,299,0,0" VerticalAlignment="Top" FontSize="18" Click="agregarBtn_Click"/>
        <Button x:Name="AgregarAutorBtn" Content="Agregar" HorizontalAlignment="Left" Margin="680,363,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Background="#FFF8AF23" Click="AgregarAutorBtn_Click"/>

    </Grid>
</Window>
