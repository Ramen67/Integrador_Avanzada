<Window x:Class="Integrador_Avanzada.Prestamo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrador_Avanzada"
        mc:Ignorable="d"
        Title="Prestamo" Height="450" Width="800">
    <Grid Margin="0,0,-30,-31">
        <Image HorizontalAlignment="Left" Height="80" Margin="10,8,0,0" VerticalAlignment="Top" Width="75" Source="/Imagenes/libreria.png"/>
        <Button x:Name="UsuarioBtn" Content="Usuario" HorizontalAlignment="Left" Margin="560,20,0,0" VerticalAlignment="Top"  Height="46" Width="105" FontSize="20" Background="#FFF8AF23" Click="UsuarioBtn_Click"/>
        <Button x:Name="HomeBtn" Content="Home" HorizontalAlignment="Left" Margin="680,20,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Click="HomeBtn_Click" Background="#FFF8AF23"/>
        <Button x:Name="SancionesBtn" Content="Sanciones" HorizontalAlignment="Left" Margin="440,20,0,0" VerticalAlignment="Top" Width="105" Height ="45" FontSize="20" Click="SancionesBtn_Click" Background="#FFF8AF23" />
        <Button x:Name="EjemplarBtn" Content="Ejemplar" HorizontalAlignment="Left" Margin="320,20,0,0" VerticalAlignment="Top" Width="105" Height="46" FontSize="20" Background="#FFF8AF23" Click="EjemplarBtn_Click"/>
        <Button x:Name="LibroBtn" Content="Libro" HorizontalAlignment="Left" Margin="200,20,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Background="#FFF8AF23" Click="LibroBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"><Run Text="Realizar prestamo"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="25,120,0,0" TextWrapping="Wrap" Text="ID del ejemplar" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="200,120,0,0" TextWrapping="Wrap" Text="ID del usuario" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtIdEjemplar" HorizontalAlignment="Left" Margin="24,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtIdUsuario" HorizontalAlignment="Left" Margin="200,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="rPresbtn" Content="Realizar prestamo" HorizontalAlignment="Left" Margin="104,170,0,0" VerticalAlignment="Top" FontSize="18" Click="rPresbtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="418,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Text="Devolver prestamo"/>
        <TextBlock HorizontalAlignment="Left" Margin="418,120,0,0" TextWrapping="Wrap" Text="ID del prestamo" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtPresbtn" HorizontalAlignment="Left" Margin="418,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnDevol" Content="Devolver prestamo" HorizontalAlignment="Left" Margin="416,170,0,0" VerticalAlignment="Top" FontSize="18" Click="btnDevol_Click"/>
        <DataGrid x:Name="dgPrestamo" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="295,269,65,65" />
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Bucar prestamos por usuario" VerticalAlignment="Center" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,269,0,0" TextWrapping="Wrap" Text="ID del usuario" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtBusqueda" HorizontalAlignment="Left" Margin="24,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buscarbtn" Content="Buscar" HorizontalAlignment="Left" Margin="50,315,0,0" VerticalAlignment="Top" FontSize="18" Click="buscarbtn_Click"/>
    </Grid>
</Window>
