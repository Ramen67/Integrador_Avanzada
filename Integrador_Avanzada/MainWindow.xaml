<Window x:Class="Integrador_Avanzada.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrador_Avanzada"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TextBlock x:Name="PresentacionTxt" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Height="230" Width="564" FontSize="40" TextAlignment="Center" Grid.ColumnSpan="2" Margin="118,0,0,0"><Run Language="es-mx" Text="Bienvenido al Gestor de bibliotecas."/><LineBreak/><Run Language="es-mx" Text="Selecciona una opción en la barra de navegación"/></TextBlock>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,8,0,0" VerticalAlignment="Top" Width="75" Source="/Imagenes/libreria.png"/>
        <Button x:Name="PrestamoBtn" Content="Prestamo" HorizontalAlignment="Left" Margin="540,22,0,0" VerticalAlignment="Top"  Height="46" Width="105" FontSize="20" Click="PrestamoBtn_Click"/>
        <Button x:Name="SancionesBtn" Content="Sanciones" HorizontalAlignment="Left" Margin="665,22,0,0" VerticalAlignment="Top" Width="105" Height="45" FontSize="20" Click="SancionesBtn_Click"/>
        <Button x:Name="DevolucionBtn" Content="Devolucion" HorizontalAlignment="Left" Height="47" Margin="415,21,0,0" VerticalAlignment="Top" Width="105" RenderTransformOrigin="0.619,0.001" FontSize="20" Click="DevolucionBtn_Click" />
    </Grid>
</Window>
