<Window x:Class="Integrador_Avanzada.AutoresAgregar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrador_Avanzada"
        mc:Ignorable="d"
        Title="AutoresAgregar" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="80" Margin="10,8,0,0" VerticalAlignment="Top" Width="75" Source="/Imagenes/libreria.png"/>
        <Button x:Name="PrestamoBtn" Content="Prestamo" HorizontalAlignment="Left" Margin="602,20,0,0" VerticalAlignment="Top"  Height="46" Width="105" FontSize="20" Click="PrestamoBtn_Click" Background="#FFF8AF23"/>
        <Button x:Name="UsuarioBtn" Content="Usuario" HorizontalAlignment="Left" Margin="715,20,0,0" VerticalAlignment="Top" Width="70" Height="45" FontSize="20" Background="#FFF8AF23" Click="UsuarioBtn_Click"/>
        <Button x:Name="SancionesBtn" Content="Sanciones" HorizontalAlignment="Left" Margin="482,20,0,0" VerticalAlignment="Top" Width="105" Height ="45" FontSize="20" Click="SancionesBtn_Click" Background="#FFF8AF23" />
        <Button x:Name="EjemplarBtn" Content="Ejemplar" HorizontalAlignment="Left" Margin="362,20,0,0" VerticalAlignment="Top" Width="105" Height="46" FontSize="20" Background="#FFF8AF23" Click="EjemplarBtn_Click"/>
        <Button x:Name="LibroBtn" Content="Libro" HorizontalAlignment="Left" Margin="272,20,0,0" VerticalAlignment="Top" Width="75" Height="45" FontSize="20" Background="#FFF8AF23" Click="LibroBtn_Click"/>
        <Button x:Name="AutorBtn" Content="Autor" HorizontalAlignment="Left" Margin="189,20,0,0" VerticalAlignment="Top" Width="72" Height="45" FontSize="20" Background="#FFF8AF23" Click="AutorBtn_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="251,104,0,0" TextWrapping="Wrap" Text="Autores:" VerticalAlignment="Top" FontSize="20"/>
        <DataGrid x:Name="dgAutor" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="179,136,399,40" SelectionChanged="dgAutor_SelectionChanged"/>
        <TextBox x:Name="txtNombreAutor" HorizontalAlignment="Left" Margin="482,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="482,174,0,0" TextWrapping="Wrap" Text="Nombre:" VerticalAlignment="Top" Width="135" FontSize="16"/>
        <TextBox x:Name="txtNacionalidadAutor" HorizontalAlignment="Left" Margin="482,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="482,233,0,0" TextWrapping="Wrap" Text="Nacionalidad:" VerticalAlignment="Top" Width="135" FontSize="16"/>
        <Button x:Name="agregarAutorBtn" Content="Agregar autor" HorizontalAlignment="Left" Margin="484,309,0,0" VerticalAlignment="Top" FontSize="18" Click="agregarBtn_Click"/>

    </Grid>
</Window>
